{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose:start-debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose-dev.yml",
                "up",
                "--build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Start Docker Compose for Debugging"
        },
        {
            "label": "docker-compose:stop-debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose-dev.yml",
                "down", "-v"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Stop Docker Compose for Debugging"
        }
    ]
}